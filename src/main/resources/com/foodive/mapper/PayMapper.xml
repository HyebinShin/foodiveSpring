<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodive.mapper.PayMapper">

    <insert id="insert">
        <selectKey keyProperty="payNo" order="BEFORE" resultType="long">
            select seq_pay.nextval from dual
        </selectKey>

        insert into tbl_pay (payNo, ono, payment, state)
        values (#{payNo}, #{ono}, #{payment}, #{state})
    </insert>

    <update id="update">
        update tbl_pay
        set
        <trim suffixOverrides=",">
            <if test="state != null">
                state = #{state},
                <if test="state == 1">
                    payDate = sysdate,
                </if>
            </if>
        </trim>
        <where>
            <if test="payNo != null">
                and payNo = #{payNo}
            </if>
            <if test="ono != null">
                and ono = #{ono}
            </if>
        </where>
    </update>

    <select id="get" resultType="com.foodive.domain.PayVO">
        select * from tbl_pay where ono = #{ono}
    </select>

</mapper>